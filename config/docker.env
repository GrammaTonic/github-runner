# Docker and Docker Compose Configuration
# Environment variables for Docker operations

# Docker Registry Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_NAMESPACE=grammatonic
IMAGE_NAME=github-runner
IMAGE_TAG=latest

# Build Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
BUILDX_EXPERIMENTAL=1

# Multi-platform Build Support
PLATFORMS=linux/amd64,linux/arm64

# Registry Authentication
REGISTRY_USERNAME=grammatonic
# REGISTRY_PASSWORD should be set as a secret in CI/CD

# Cache Configuration
DOCKER_CACHE_FROM=type=gha
DOCKER_CACHE_TO=type=gha,mode=max

# Development Configuration
DEV_MOUNT_SOURCE=true
DEV_ENABLE_DEBUG=false

# Production Configuration
PROD_RESTART_POLICY=unless-stopped
PROD_MEMORY_LIMIT=4G
PROD_CPU_LIMIT=2.0

# Monitoring Configuration
ENABLE_PROMETHEUS=false
ENABLE_GRAFANA=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Network Configuration
NETWORK_NAME=github-runner-network
NETWORK_SUBNET=172.20.0.0/16

# Security Configuration
NO_NEW_PRIVILEGES=true
READ_ONLY_ROOT_FS=false
USER_ID=1001
GROUP_ID=1001
